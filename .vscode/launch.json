    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            // Change the URL to match your Express app's port
            "url": "http://localhost:3000", // {{ edit_1 }}
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Broken App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\broken-app\\app.js"
        }
    ]
}